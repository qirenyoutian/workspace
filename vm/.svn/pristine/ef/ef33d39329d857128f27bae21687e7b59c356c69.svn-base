		  //生成数据
		    function initData() {
		        var legendData = ['销售额', '销售量'];
		        var bgColorList = ['#DC143C', '#31BDF2','#6495ED'];
		       // var axisLabel = ['化学', '数学', '地理', '物理', '英语', '音乐', '语文', '历史', '美术', '生物', '信息技术', '政治', '体育'];
		        var seriesValue = [];
		        
		        var piontName = new Array();
				var price = new Array();
				var count = new Array();
				var year = "";
				var month = "";
				$.ajax({
					url:"${APP_PATH}/getPointReport",
					data:{
						"year":year,
						"month":month
						}, 
					type:"POST",
					async:false,
					success:function(result){
						var value = result.object;
						$.each(value,function(index,it){
							piontName.push(it.pointName);
							price.push(it.sum);
							count.push(it.count);
							//count = it.count;
						})
						return piontName+price+count;
					}
				});
		        buildChart(legendData, piontName, price,count);

		    }

		//生成Echarts图形
		    function buildChart(legendData, axisLabel, price,count) {
		        var chart = document.getElementById('main');
		        var echart = echarts.init(chart);
		        var option = {
		            title: {
		                text: "点位销售报表分析",//正标题
		                x: "center", //标题水平方向位置
		                y: "0", //标题竖直方向位置
		                textStyle: {
		                    fontSize: 18,
		                    fontWeight: 'normal',
		                    color: '#666'
		                }
		            },
		            tooltip: {
		                trigger: 'axis',
		                axisPointer: {
		                    type: 'shadow'//阴影，若需要为直线，则值为'line'
		                }
		            },
		            toolbox: {
		                show: true,
		                feature: {
		                    saveAsImage: {show: true},
		                    mark : {show: true},
		                    dataView : {show: true, readOnly: false},
		                    magicType : {show: true, type: ['line', 'bar']},
		                    restore : {show: true},
		                }
		            },
		            legend: {
		                data: legendData,
		                y: 'bottom'//图例说明文字设置

		            },
		            grid: {
		                left: '3%',
		                right: '4%',
		                bottom: '10%',
		                top:'10%',
		                containLabel: true
		            },
		            xAxis: [{
		                min: 0,
		                type: 'category', //纵向柱状图，若需要为横向，则此处值为'value'， 下面 yAxis 的type值为'category'
		                data: axisLabel
		            }],
		            yAxis: [{
		                min: 0,
		                type: 'value',
		                splitArea: {show: false}
		            }],
		            label: {
		                normal: { //显示bar数据
		                    show: true,
		                    position: 'top'
		                }
		            },
		            series: [
		                     {
		                         name:'销售额',
		                         type:'bar',
		                         data:price,
		                         markPoint : {
		                           data : [
		                             {type : 'max', name: '最大值'},
		                             {type : 'min', name: '最小值'}
		                           ]
		                         },
		                         markLine : {
		                           data : [
		                             {type : 'average', name: '平均值'}
		                           ]
		                         }
		                       },
		                       {
		                         name:'销售量',
		                         type:'bar',
		                         data:count,
		                         markPoint : {
		                           data : [
		                             {type : 'max', name: '最大值'},
		                             {type : 'min', name: '最小值'}
		                           ]
		                         },
		                         markLine : {
		                           data : [
		                             {type : 'average', name: '平均值'}
		                           ]
		                         }
		                       }]
		        };

		        echart.setOption(option);
		    }
		 
		

