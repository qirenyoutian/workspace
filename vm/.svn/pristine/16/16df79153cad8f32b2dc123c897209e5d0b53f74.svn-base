	/**
	 * 铺货打卡
	 * @return
	 */
	@RequestMapping("/clockIn")
	public Msg clockIn(@RequestParam("phonenum")String phonenum,
			@RequestParam("type")Integer type,
			@RequestParam("images")MultipartFile[] images,
			@RequestParam("time")String time) {
		System.out.println("进入clockIn方法了");
		if(type == null) {
			return Msg.fail().add("msg", "请上传打卡类型");
		}
		System.out.println("传的type："+type);
		if(images == null || images.length == 0) {
			return Msg.fail().add("msg", "请上传铺货图片");
		}
		System.out.println("传的图片张数："+images.length);
		if(time == null || "".equals(time.trim())){
			return Msg.fail().add("msg", "请上传打卡时间");
		}
		System.out.println("上传的时间"+time);
		SMSBean smsBean = (SMSBean) CommonUtil.MSG_MAP.get(phonenum);
		String path = null;
		ClockIn clockIn = new ClockIn();
		clockIn.setClockInAdminId(smsBean.getId());
		clockIn.setClockInType(type);
		for (MultipartFile file : images) {
			try {
				path = CommonUtil.saveFile(file);
				if(clockIn.getClockInImage() == null) {
					clockIn.setClockInImage(path);
				}else {
					clockIn.setClockInImage(clockIn.getClockInImage() + ";" +path);
				}
			} catch (Exception e) {
				continue;
			}
		}
		clockIn.setClockInCreateTime(time);
		
		int i = appletService.clockIn(clockIn);
		if(i == 0) {
			return Msg.fail().add("msg", "反馈失败");
		}
		return Msg.success();
	}
	
